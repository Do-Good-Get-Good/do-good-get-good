{
  "name": "DoGoodGetGood",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android --mode=devDebug --appIdSuffix=dev",
    "android-prod": "react-native run-android --mode=prodDebug",
    "build-apk": "cd android && ./gradlew clean && ./gradlew assembleRelease",
    "ios": "react-native run-ios --scheme 'DoGoodGetGoodDev' --simulator 'iPhone 14 Pro Max'",
    "ios-prod": "react-native run-ios --simulator 'iPhone 14 Pro Max'",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.3",
    "@react-native-community/netinfo": "^9.4.1",
    "@react-native-firebase/app": "^18.3.1",
    "@react-native-firebase/auth": "^18.3.1",
    "@react-native-firebase/crashlytics": "^18.3.1",
    "@react-native-firebase/firestore": "^18.3.1",
    "@react-native-firebase/functions": "^18.3.1",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/native-stack": "^6.9.13",
    "@rneui/base": "^4.0.0-rc.7",
    "@rneui/themed": "^4.0.0-rc.7",
    "date-fns": "^2.30.0",
    "firebase-functions": "^4.4.1",
    "mobx": "^6.10.0",
    "mobx-react-lite": "^4.0.3",
    "react": "18.2.0",
    "react-native": "0.72.4",
    "react-native-calendars": "^1.1293.0",
    "react-native-config": "^1.5.0",
    "react-native-device-info": "^10.4.0",
    "react-native-linear-gradient": "^2.6.2",
    "react-native-safe-area-context": "^4.5.0",
    "react-native-screens": "^3.20.0",
    "react-native-vector-icons": "^9.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.10",
    "@babel/runtime": "^7.22.11",
    "@react-native-community/eslint-config": "^3.2.0",
    "@react-native/metro-config": "^0.72.11",
    "@testing-library/react-native": "^12.2.2",
    "@tsconfig/react-native": "^3.0.2",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.2.21",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.4",
    "eslint": "^8.47.0",
    "jest": "^29.6.4",
    "jest-each": "^29.6.3",
    "metro-react-native-babel-preset": "0.77.0",
    "prettier": "^3.0.2",
    "react-test-renderer": "18.2.0",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=16"
  },
  "jest": {
    "preset": "react-native",
    "moduleNameMapper": {
      "react-dom": "react-native"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@react-native|react-native|@rneui)"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./reports/coverage",
    "collectCoverageFrom": [
      "App.js",
      "./screens/**",
      "./components/**",
      "./context/**",
      "./hooks/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 1
      }
    }
  }
}
