{
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "web": "expo start --web",
    "start": "react-native start",
    "test": "jest"
  },
  "transform": {
    "\\.js$": "src/node_modules/babel-jest"
  },
  "dependencies": {
    "@babel/preset-flow": "^7.14.5",
    "@react-native-async-storage/async-storage": "^1.17.3",
    "@react-native-community/netinfo": "^8.2.0",
    "@react-native-firebase/app": "^12.8.0",
    "@react-native-firebase/auth": "^12.8.0",
    "@react-native-firebase/firestore": "^12.8.0",
    "@react-native-firebase/functions": "^14.7.0",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/native-stack": "^6.6.1",
    "date-fns": "^2.24.0",
    "expo": "~42.0.1",
    "expo-splash-screen": "~0.11.2",
    "expo-status-bar": "~1.0.4",
    "expo-updates": "~0.8.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.68.1",
    "react-native-calendars": "^1.1282.0",
    "react-native-elements": "^3.4.2",
    "react-native-gesture-handler": "~1.10.2",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-reanimated": "~2.2.0",
    "react-native-safe-area-context": "3.2.0",
    "react-native-screens": "~3.4.0",
    "react-native-unimodules": "~0.14.5",
    "react-native-vector-icons": "^8.1.0",
    "react-native-web": "~0.13.12",
    "tailwind-react-native-classnames": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/react-native": "^7.2.0",
    "jest": "^26.6.3",
    "jest-html-reporters": "^3.0.6",
    "jest-junit": "^13.1.0",
    "react-test-renderer": "^17.0.2"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|(?!deck.gl)|ng-dynamic)"
    ],
    "setupFiles": [
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./reports/coverage",
    "collectCoverageFrom": [
      "./screens/**",
      "./components/**",
      "index.js",
      "App.js",
      "./context/**"
    ],
    "coverageReporters": [
      "json",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 1
      }
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "suiteName": "jest tests",
          "outputDirectory": "./reports",
          "outputName": "JEST-tests.xml"
        }
      ],
      [
        "jest-html-reporters",
        {
          "publicPath": "./reports/html-test-report",
          "filename": "test-report.html"
        }
      ]
    ]
  },
  "private": true
}
